{% extends 'base.html.twig' %}


{% block title %}{{ parent() }} : voiture{% endblock %}

{% block body %}
<div class="uk-card uk-card-default uk-card-body uk-width-1-3">

     <h3 class="uk-card-title">{{ voiture.modele }}</h3>
     
     <p>Véhicule de marque {{ voiture.marque }}</p>
     <p>Type(s) de véhicule :</p>
     {% for cat in voiture.categories %}
          <p> - {{ cat }}</p>
     {% endfor %}
     <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slideshow="animation: fade">
          <ul class="uk-slideshow-items">
          {% for im in voiture.images %}
               <li>
                    <img src="{{ im.url }}" alt="Ici devrait se trouver une photo." uk-cover>
               </li>
          {% endfor %}
          </ul>
     </div>
     <p>Disponible dans notre agence de {{ voiture.agence }}</p>
     <p>Tarif : {{ voiture.tarif }} € par jour</p>
     <p>Référence :  {{ voiture.reference }}</p>

     {% if is_granted ("ROLE_ADMIN") %}
     <div>
          <a class="uk-button uk-button-success" href="{{path ("modif_voiture",{'slug':voiture.slug})}}">Modifier</a>
     </div>
     {% endif %}

     {% if is_granted ("ROLE_USER") %}
     <div>
          <a class="uk-button uk-button-success" href="{{path ("louer_voiture",{'slug':voiture.slug})}}">Louer ce véhicule</a>
     </div>
     {% endif %}

</div>
{% endblock %}



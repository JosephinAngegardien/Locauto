{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} : inscription{% endblock %}

{% block body %}
<div class="uk-card uk-card-default uk-card-body uk-width-1-3">


        {{ form_start(registrationForm, { 'attr' : { 'class' : 'uk-form-horizontal'}}) }}

            <h2 class="legend">Inscription</h2>

            <div class="uk-margin">
                {{ form_label(registrationForm.email, "Courriel") }}
                {{ form_widget(registrationForm.email) }}
            </div>
            <div class="uk-margin">
                {{ form_label(registrationForm.prenom, "Prénom") }}
                {{ form_widget(registrationForm.prenom) }}
            </div>
            <div class="uk-margin">
                {{ form_label(registrationForm.nom, "Nom") }}
                {{ form_widget(registrationForm.nom) }}
            </div>
            <div class="uk-margin">
                {{ form_label(registrationForm.username, "Pseudonyme") }}
                {{ form_widget(registrationForm.username) }}
            </div>
            <div class="uk-margin">
                {{ form_label(registrationForm.password.first, "Mot de passe (au moins huit caractères) ") }}
                {{ form_widget(registrationForm.password.first) }}
            </div>
            <div class="uk-margin">
                {{ form_label(registrationForm.password.second, "Confirmation du mot de passe ") }}
                {{ form_widget(registrationForm.password.second) }}
            </div>

        <button class="uk-button uk-button-default">Enregistrement</button>

        {{ form_end(registrationForm) }}

</div>
{% endblock %}




{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} : inscription{% endblock %}

{% block body %}
<div class="uk-card uk-card-default uk-card-body uk-width-1-2">

        <div class="uk-card-title">
            <h2>Inscription</h2>
        </div>

        <div>
        {{ form_start(registrationForm) }}
        <table>
            <tr>
                {# <td>{{ form_row(registrationForm.email) }}</td> #}
                <td>{{ form_label(registrationForm.email, "Courriel") }}</td>
                <td>{{ form_widget(registrationForm.email) }}</td>
            </tr>
            <tr>
                {# <td>{{ form_row(registrationForm.email) }}</td> #}
                <td>{{ form_label(registrationForm.prenom, "Prénom") }}</td>
                <td>{{ form_widget(registrationForm.prenom) }}</td>
            </tr>
            <tr>
                {# <td>{{ form_row(registrationForm.email) }}</td> #}
                <td>{{ form_label(registrationForm.nom, "Nom") }}</td>
                <td>{{ form_widget(registrationForm.nom) }}</td>
            </tr>
            <tr>
                {# <td>{{ form_row(registrationForm.email) }}</td> #}
                <td>{{ form_label(registrationForm.username, "Pseudonyme") }}</td>
                <td>{{ form_widget(registrationForm.username) }}</td>
            </tr>
            <tr>
                {# <td>{{ form_row(registrationForm.password.first, "Mot de passe (au moins huit caractères) ") }}</td> #}
                <td>{{ form_label(registrationForm.password.first, "Mot de passe (au moins huit caractères) ") }}</td>
                <td>{{ form_widget(registrationForm.password.first) }}</td>
            </tr>
            <tr>
                {# <td>{{ form_row(registrationForm.password.second, "Confirmation du mot de passe ") }}</td> #}
                <td>{{ form_label(registrationForm.password.second, "Confirmation du mot de passe ") }}</td>
                <td>{{ form_widget(registrationForm.password.second) }}</td>
            </tr>
        </table>

        <button class="">Enregistrement</button>

        {{ form_end(registrationForm) }}
        </div>

</div>
{% endblock %}




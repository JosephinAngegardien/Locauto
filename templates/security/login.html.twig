{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} : connexion{% endblock %}


{% block body %}
<div class="uk-card uk-card-default uk-card-body uk-width-1-3 centrer">

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {# <fieldset class="fieldset"> #}
            <legend class="uk-legend">Veuillez vous connecter</legend>
            {# <label for="inputEmail" class="">Courriel</label> #}
            <div class="uk-margin">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="uk-input" placeholder="Courriel" required autofocus>
            </div>
            {# <label for="inputPassword" class="">Mot de passe</label> #}
            <div class="uk-margin">
                <input type="password" name="password" id="inputPassword" class="uk-input" placeholder="Mot de passe" required>
            </div>
        {# </fieldset> #}

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="uk-button uk-button-default" type="submit">
            Connexion
        </button>
    </form>

</div>
{% endblock %}



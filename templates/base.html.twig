<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Locauto{% endblock %}</title>
        
        {% block stylesheets %}
        <!-- UIkit CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.2.2/dist/css/uikit.min.css" />
        {# Google fonts #}
<link href="https://fonts.googleapis.com/css?family=Courgette&display=swap" rel="stylesheet"> 
        {# Mon CSS #}
<link rel="stylesheet" href="css/style.css" />
        {% endblock %}
    </head>
    <body id="bodybase">
        <section class="uk-background-default" id="zone1">

        {% block navigation %}
        <header uk-sticky="sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky; bottom: #transparent-sticky-navbar">
            <nav class="uk-navbar-container" uk-navbar style="position: relative; z-index: 980;">
                <div class="uk-navbar-center">
                    <ul class="uk-navbar-nav">
                        <li><a class="uk-link-muted" href="{{path ("accueil")}}">accueil</a></li>
                        {% if app.user %}
                        <li class="uk-active"><a href="{{path ("logout")}}">Deconnexion</a></li>
                            {% if is_granted ("ROLE_PARTICULIER") %}
                            <li class="uk-parent"><a href="{{path ("modif_part")}}">Modifier mon profil</a></li>
                            {% endif %}
                            {% if is_granted ("ROLE_PROFESSIONNEL") and is_granted ('ROLE_ADMIN') == false %}
                            <li class="uk-parent"><a href="{{path ("modif_pro")}}">Modifier le profil</a></li>
                            {% endif %}
                        {% else %}
                        <button class="uk-button uk-button-default" type="button">Inscription</button>
                        <div uk-dropdown>
                            <ul class="uk-nav uk-dropdown-nav">
                                <li class="uk-active"><a href="{{path ("register_part")}}">Inscription particulier</a></li>
                                <li class="uk-active"><a href="{{path ("register_pro")}}">Inscription professionnel</a></li>
                            </ul>
                        </div>
                        <li class="uk-parent"><a href="{{path ("login")}}">Connexion</a></li>
                        {% endif %}
                        <li class="uk-parent"><a href="{{path ("liste_voitures")}}">Nos véhicules</a></li>
                    </ul>
                        {% if is_granted ("ROLE_ADMIN") %}
                        <button class="uk-button uk-button-default" type="button">admin</button>
                        <div uk-dropdown>
                            <ul class="uk-nav uk-dropdown-nav">
                                <li><a href="{{path ("liste_agences")}}">Liste des agences</a></li>
                                <li><a href="{{path ("enregistrer_agence")}}">Ajouter une agence</a></li>
                                <li><a href="{{path ("liste_marques")}}">Liste des marques</a></li>
                                <li><a href="{{path ("enregistrer_marque")}}">Ajouter une marque</a></li>
                                <li><a href="{{path ("liste_categories")}}">Liste des catégories</a></li>
                                <li><a href="{{path ("enregistrer_categorie")}}">Ajouter une catégorie</a></li>
                                <li><a href="{{path ("liste_images")}}">Images disponibles</a></li>
                                {# <li><a href="{{path ("enregistrer_image")}}">Ajouter une image</a></li> #}
                                <li><a href="{{path ("enregistrer_voiture")}}">Enregistrer une voiture</a></li>
                            </ul>
                        </div>
                        {% endif %}
                </div>
            </nav>
        </header>
        {% endblock %}

        <div class="titre">
            <h1 id="nomdusite">Locauto</h1>
        </div>

        {% block body %}
        {% endblock %}

        </section>

        <section id="zone2">
        </section>
        {% block javascripts %}
            <script
                src="https://code.jquery.com/jquery-3.4.1.min.js"
                integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
                crossorigin="anonymous">
            </script>
                <!-- UIkit JS -->
            <script src="https://cdn.jsdelivr.net/npm/uikit@3.2.2/dist/js/uikit.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/uikit@3.2.2/dist/js/uikit-icons.min.js"></script>
                {# Mon JS #}
            {# <script src="js/monjs.js"></script> #}
        {% endblock %}
    </body>
</html>




